  huart2.Init.OverSampling = UART_OVERSAMPLING_16;
  if (HAL_UART_Init(&huart2) != HAL_OK)
  {
    Error_Handler();
  }
  /* USER CODE BEGIN USART2_Init 2 */

  /* USER CODE END USART2_Init 2 */

}

/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};
  /* USER CODE BEGIN MX_GPIO_Init_1 */

  /* USER CODE END MX_GPIO_Init_1 */

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOC_CLK_ENABLE();
  __HAL_RCC_GPIOH_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(ESP32_CS_GPIO_Port, ESP32_CS_Pin, GPIO_PIN_RESET);

  /*Configure GPIO pin : B1_Pin */
  GPIO_InitStruct.Pin = B1_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_IT_FALLING;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(B1_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pin : ESP32_CS_Pin */
  GPIO_InitStruct.Pin = ESP32_CS_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(ESP32_CS_GPIO_Port, &GPIO_InitStruct);

  /* EXTI interrupt init*/
  HAL_NVIC_SetPriority(EXTI15_10_IRQn, 0, 0);
  HAL_NVIC_EnableIRQ(EXTI15_10_IRQn);

  /* USER CODE BEGIN MX_GPIO_Init_2 */

  /* USER CODE END MX_GPIO_Init_2 */
}

/* USER CODE BEGIN 4 */
void HAL_GPIO_EXTI_Callback(uint16_t GPIO_Pin)
{


}

void HAL_UART_RxCpltCallback(UART_HandleTypeDef *huart)
{
	// Verificar si es Enter para tomarlo como fin de comando
    if (huart->Instance == USART2) {
        char debug_msg[50];
        sprintf(debug_msg, "DEBUG: modo=%d, char='%c'\r\n", modo, buffer[buffer_index]);
        transmit_uart(debug_msg);

        if (modo == 0) {
            // En modo menú, procesar inmediatamente cualquier carácter válido
            if (buffer[buffer_index] == '1' || buffer[buffer_index] == '2') {
                dato_recibido = 1;
            } else {
                // Carácter inválido, ignorar y seguir recibiendo
                HAL_UART_Receive_IT(&huart2, (uint8_t*)&buffer[buffer_index], 1);
            }
        }
        else if (modo == 1) {
            // En modo SPI, verificar si es Enter
            if (buffer[buffer_index] == '\r' || buffer[buffer_index] == '\n') {
                // Solo procesar si el buffer no está vacío
                if (buffer_index > 0) {
                    buffer[buffer_index] = '\0'; // Terminar string
                    comando_completo = 1;
                    dato_recibido = 1;
                    transmit_uart("Debug: Comando completo recibido\r\n");
                } else {
                    HAL_UART_Receive_IT(&huart2, (uint8_t*)&buffer[buffer_index], 1);
                }
        } else {
            // Carácter normal - preparar recepción para la SIGUIENTE posición
            if (buffer_index < sizeof(buffer) - 2) {
                // IMPORTANTE: Primero incrementar el índice, luego recibir en la nueva posición
                buffer_index++;
                HAL_UART_Receive_IT(&huart2, (uint8_t*)&buffer[buffer_index], 1);
            } else {
                // Buffer lleno, forzar comando completo
                buffer[buffer_index + 1] = '\0'; // Terminar después del último carácter
                comando_completo = 1;
                dato_recibido = 1;
                transmit_uart("Debug: Buffer lleno, comando forzado\r\n");
            	}
            }
        }
    }
}
/* USER CODE END 4 */

