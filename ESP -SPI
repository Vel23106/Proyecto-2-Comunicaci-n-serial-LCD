/* USER CODE END Header */
/* Includes ------------------------------------------------------------------*/
#include "main.h"

/* Private includes ----------------------------------------------------------*/
/* USER CODE BEGIN Includes */
#include "string.h"
#include "stdio.h"
#include "stdlib.h"

char buffer[32];
uint8_t buffer_index = 0;
volatile uint8_t modo = 0;
volatile uint8_t dato_recibido = 0;
volatile uint8_t comando_completo = 0;
volatile uint8_t esperando_datos = 0;
//Separar datos
int led = 0;
int tiempo = 0;

/* USER CODE END Includes */

/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */
#define ESP32_CS_Pin GPIO_PIN_6
#define ESP32_CS_GPIO_Port GPIOB
/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */

/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
SPI_HandleTypeDef hspi1;

UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */

/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART2_UART_Init(void);
static void MX_SPI1_Init(void);
/* USER CODE BEGIN PFP */
void transmit_uart(char *string);
void mostrar_menu(void);
void enviar_spi(void);
void separar(void);
void procesar_entrada_spi(char c);
void limpiar_buffer(void);
/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
void transmit_uart (char *string){
	uint8_t len = strlen(string);
	HAL_UART_Transmit(&huart2, (uint8_t*) string , len, 200);
}

// Función para limpiar buffer (se repite mucho)
void limpiar_buffer(void) {
    memset(buffer, 0, sizeof(buffer));
    buffer_index = 0;
}


//Función para menú
void mostrar_menu (void){
	transmit_uart("\n=== MENU DE OPCIONES ===\n");
	transmit_uart("1. Controlar dispositivo SPI\n");
	transmit_uart("2. Obtener medición de Sensor I2C\n");
	transmit_uart("Seleccione una opcion (1-2):\n");
}

void procesar_menu(char opcion) {
    if (opcion == '1') {
        transmit_uart("\r\nOpción 1 seleccionada - SPI\r\n");
        transmit_uart("Ingrese LED,tiempo (Ejemplo: 1,500):\r\n");

        // LIMPIAR BUFFER ANTES de cambiar a modo 1
        limpiar_buffer();

        //Cambio de modo
        modo = 1;
        esperando_datos = 1;

    } else if (opcion == '2') {
        transmit_uart("\r\nOpción 2 seleccionada - I2C\r\n");
        // Aquí iría el código para I2C
        transmit_uart("Funcionalidad I2C no implementada\r\n");
        mostrar_menu();
    } else {
        transmit_uart("\r\nOpción inválida\r\n");
        mostrar_menu();
    }
}

// Función para procesar entrada en modo SPI
void procesar_entrada_spi(char c) {
    // Echo del carácter recibido (para que el usuario vea lo que escribe)
    char echo[2] = {c, '\0'};
    HAL_UART_Transmit(&huart2, (uint8_t*)echo, 1, 100);

    // Si es Enter, procesar comando
    if (c == '\r' || c == '\n') {
        if (buffer_index > 0) {
            buffer[buffer_index] = '\0'; // Terminar string
            transmit_uart("\r\n"); // Nueva línea después del enter
            comando_completo = 1;
            dato_recibido = 1;
            esperando_datos = 0;
        } else {
            transmit_uart("\r\nIngrese comando: ");
        }
    }
    // Si es backspace (127 en algunas terminales, 8 en otras)
    else if (c == 127 || c == 8) {
        if (buffer_index > 0) {
            buffer_index--;
            buffer[buffer_index] = '\0';
            transmit_uart("\b \b"); // Borrar carácter en terminal
        }
    }
    // Carácter válido para comando SPI
    else if (isalnum(c) || c == ',' || c == ' ') {
        if (buffer_index < sizeof(buffer) - 1) {
            buffer[buffer_index++] = c;
        } else {
            transmit_uart("\r\nBuffer lleno. Presione Enter para procesar.\r\n");
        }
    }
    // Carácter no válido
    else {
        // Ignorar caracteres no válidos
    }
}

//Función para separar
void separar(void){
    char *token;
    char *rest = buffer;

    // Primer token - LED
    token = strtok_r(rest, ",", &rest);
    if (token != NULL) {
        led = atoi(token);
    } else {
        led = 0;
    }

    // Segundo token - Tiempo
    token = strtok_r(rest, ",", &rest);
    if (token != NULL) {
        tiempo = atoi(token);
    } else {
        tiempo = 0;
    }
}

//Función para enviar comando SPI
void enviar_spi(void){

    // DEBUG de verificación
    char debug_spi[100];
    transmit_uart("\r\n=== INICIANDO COMUNICACION SPI ===\r\n");
    sprintf(debug_spi, "Comando: '%s'\r\n", buffer);
    transmit_uart(debug_spi);
    sprintf(debug_spi, "LED=%d, Tiempo=%dms\r\n", led, tiempo);
    transmit_uart(debug_spi);

    // Preparar datos para SPI
    uint8_t spi_data[3];
    spi_data[0] = (uint8_t)led;           // Byte 0: LED (1, 2, o 3)
    spi_data[1] = (uint8_t)(tiempo & 0xFF);        // Byte 1: Parte baja del tiempo
    spi_data[2] = (uint8_t)((tiempo >> 8) & 0xFF); // Byte 2: Parte alta del tiempo

    sprintf(debug_spi, "Bytes SPI: [0x%02X, 0x%02X, 0x%02X]\r\n",
            spi_data[0], spi_data[1], spi_data[2]);
    transmit_uart(debug_spi);

    // Activar el slave select
    transmit_uart("Activando CS...\r\n");
    HAL_GPIO_WritePin(ESP32_CS_GPIO_Port, ESP32_CS_Pin, GPIO_PIN_RESET);
    HAL_Delay(20);
    HAL_StatusTypeDef spi_status = HAL_SPI_Transmit(&hspi1, spi_data, 3, 1000);

    // Verificar resultado
    if(spi_status == HAL_OK) {
        transmit_uart("SPI: Transmisión EXITOSA\r\n");
    } else {
        sprintf(debug_spi, "SPI: Error en transmisión - Código: %d\r\n", spi_status);
        transmit_uart(debug_spi);
    }

    HAL_Delay(20);
    HAL_GPIO_WritePin(ESP32_CS_GPIO_Port, ESP32_CS_Pin, GPIO_PIN_SET);
    transmit_uart("CS desactivado\r\n");

    transmit_uart("=== DEBUG SPI FIN ===\r\n");
}


/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_USART2_UART_Init();
  MX_SPI1_Init();
  /* USER CODE BEGIN 2 */

  //Inicialización de la recepción del UART
  HAL_UART_Receive_IT(&huart2, (uint8_t*)&buffer[buffer_index], 1);
  transmit_uart("Sistema iniciado \r\n");
  mostrar_menu();

  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {

	  if (dato_recibido == 1){
		  dato_recibido = 0;
		  if (modo == 0){
			  //Menu principal
			  procesar_menu(buffer[0]);
			  limpiar_buffer();
		  }
		  else if (modo == 1 && comando_completo == 1){
			  // Comando completo es para enviar el buffer completo
				  comando_completo = 0;
				  transmit_uart("\r\nProcesando comando SPI...\r\n");
			      separar();
			      if (led != 0 && tiempo != 0){
					  enviar_spi();
			      } else{
		                transmit_uart("ERROR: Formato incorrecto. Use: LED,TIEMPO (ej: 1,500)\r\n");
			      }

				  //Reiniciar menu
				  modo = 0;
				  mostrar_menu();
				  limpiar_buffer();
		  }
          // Reiniciar recepción en posición 0
          HAL_UART_Receive_IT(&huart2, (uint8_t*)&buffer[buffer_index], 1);
}

	  HAL_Delay(10);






    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE3);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSI;
  RCC_OscInitStruct.PLL.PLLM = 16;
  RCC_OscInitStruct.PLL.PLLN = 336;
  RCC_OscInitStruct.PLL.PLLP = RCC_PLLP_DIV4;
  RCC_OscInitStruct.PLL.PLLQ = 2;
  RCC_OscInitStruct.PLL.PLLR = 2;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV2;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_2) != HAL_OK)
  {
    Error_Handler();
  }
}

/**
  * @brief SPI1 Initialization Function
  * @param None
  * @retval None
  */
static void MX_SPI1_Init(void)
{

  /* USER CODE BEGIN SPI1_Init 0 */

  /* USER CODE END SPI1_Init 0 */

  /* USER CODE BEGIN SPI1_Init 1 */

  /* USER CODE END SPI1_Init 1 */
  /* SPI1 parameter configuration*/
  hspi1.Instance = SPI1;
  hspi1.Init.Mode = SPI_MODE_MASTER;
  hspi1.Init.Direction = SPI_DIRECTION_2LINES;
  hspi1.Init.DataSize = SPI_DATASIZE_8BIT;
  hspi1.Init.CLKPolarity = SPI_POLARITY_LOW;
  hspi1.Init.CLKPhase = SPI_PHASE_1EDGE;
  hspi1.Init.NSS = SPI_NSS_SOFT;
  hspi1.Init.BaudRatePrescaler = SPI_BAUDRATEPRESCALER_128;
  hspi1.Init.FirstBit = SPI_FIRSTBIT_MSB;
  hspi1.Init.TIMode = SPI_TIMODE_DISABLE;
  hspi1.Init.CRCCalculation = SPI_CRCCALCULATION_DISABLE;
  hspi1.Init.CRCPolynomial = 10;
  if (HAL_SPI_Init(&hspi1) != HAL_OK)
  {
    Error_Handler();
  }
  /* USER CODE BEGIN SPI1_Init 2 */

  /* USER CODE END SPI1_Init 2 */

}

