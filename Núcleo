/* Includes ------------------------------------------------------------------*/
#include "main.h"

/* Private includes ----------------------------------------------------------*/
/* USER CODE BEGIN Includes */
#include "string.h"
#include "stdio.h"
#include "stdlib.h"

char buffer[32];
volatile uint8_t modo = 0;
//Separar datos
int led = 0;
int tiempo = 0;
;
uint8_t TX_Buffer []="2";
uint8_t RX_Buffer [1];
uint8_t bufferi2c;
uint8_t bufferr[1];


/* USER CODE END Includes */

/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */
#define ESP32_CS_Pin GPIO_PIN_6
#define ESP32_CS_GPIO_Port GPIOB
/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
